#
# wm independent hotkeys
#

# terminal emulator
super + Return
	kitty

# program launcher
super + p
	rofi -modi run,drun -show drun -columns 1 -width 24 -lines 8 -padding 45 -hide-scrollbar -show-icons -drun-icon-theme "Zofiro"

# make sxhkd reload its configuration files:
super F12
	pkill -USR1 -x sxhkd

# Open sxhkdrc config file
# super F1
# 	geany -e vim /home/alex/.config/sxhkd/sxhkdrc

#
# bspwm hotkeys
#

# restart bspwm
super F11
	bspc wm -r

# quit bspwm
super + shift + e
    bspc quit

# close and kill
super + q
	bspc node -c

#
# state/flags
#

# set the window state
super + {t,shift + t,shift + space,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
#super + ctrl + {m,x,y,z}
#	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
# 

# focus the node in the given direction
super + {_,shift} + {Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous node in the current desktop
super + {_,shift + }Tab
    bspc node -f {prev,next}.local

super + 1
    bspc desktop -f 1
super + 2
    bspc desktop -f 2
super + 3
    bspc desktop -f 3
super + 4
    bspc desktop -f 4
super + 5
    bspc desktop -f 5
super + 6
    bspc desktop -f 6
super + 7
    bspc desktop -f 7
super + 8
    bspc desktop -f 8
super + 9
    bspc desktop -f 9
super + 0
    bspc desktop -f 10

super + shift + 1
    bspc node -d 1; bspc desktop -f 1
super + shift + 2
    bspc node -d 2; bspc desktop -f 2
super + shift + 3
    bspc node -d 3; bspc desktop -f 3
super + shift + 4
    bspc node -d 4; bspc desktop -f 4
super + shift + 5
    bspc node -d 5; bspc desktop -f 5
super + shift + 6
    bspc node -d 6; bspc desktop -f 6
super + shift + 7
    bspc node -d 7; bspc desktop -f 7
super + shift + 8
    bspc node -d 8; bspc desktop -f 8
super + shift + 9
    bspc node -d 9; bspc desktop -f 9
super + shift + 0
    bspc node -d 10; bspc desktop -f 10

#
# preselect
#

# preselect the direction
# super + ctrl + {Left,Down,Up,Right}
# 	bspc node -p {west,south,north,east}

# cancel the preselection for the focused node
# super + ctrl + space
#	bspc node -p cancel

#
# move/resize
#

# expand a window
super + alt + {Left,Down,Up,Right}
	bspc node -z {left -20 0,left 0 20,top 0 -20,left 20 0}

# ===================================
# ========== User-specific ==========
# ===================================

super + w
	firefox

super + shift + s
    maim -s | xclip -selection clipboard -t image/png

super + shift + b
    echo -e "power on\nconnect AC:1D:06:5A:F1:D4" | bluetoothctl

super + shift + n
    sudo xbacklight -set 1 && redshift -PO 1500 -b .5

super + shift + ctrl + n
    sudo xbacklight -set 100 && redshift -x

# Screen brightness control
super F5
    sudo xbacklight -dec 10
super F6
    sudo xbacklight -inc 10
# Volume control
super F3
    pamixer -i 10
super F2
    pamixer -d 10
super F1
    pamixer -t
XF86AudioRaiseVolume
    pamixer -i 10
XF86AudioLowerVolume
    pamixer -d 10
XF86AudioMute
    pamixer -t
